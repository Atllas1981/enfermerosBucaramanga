---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string; // OG image
}

// Valores por defecto (Home)
const {
  title = "Enfermeros en Bucaramanga | Atención Domiciliaria",
  description = "Enfermeros profesionales en Bucaramanga. Atención domiciliaria, curaciones, inyecciones y cuidado del paciente.",
  image = "/og/default.jpg",
} = Astro.props;

// URL base (GitHub Pages)
const siteUrl = "https://atllas1981.github.io/enfermerosBucaramanga";

// URL absoluta para OG image
const absoluteImage = image.startsWith("http")
  ? image
  : `${siteUrl}${image}`;

// URL absoluta de la página (CANONICAL + OG)
const canonicalUrl = `${siteUrl}${Astro.url.pathname}`;
---

<!doctype html>
<html lang="es-CO">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- SEO básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteImage} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_CO" />

    <!-- OG Image extra (recomendado) -->
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      property="og:image:alt"
      content="Servicios profesionales de enfermería a domicilio en Bucaramanga"
    />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteImage} />

    <!-- Favicon -->
    <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />

    <!-- Apple Touch Icon -->
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={`${import.meta.env.BASE_URL}apple-touch-icon.png`}
    />

    <!-- Metadata -->
    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
