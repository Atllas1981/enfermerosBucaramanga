---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string; // OG image
}

// Valores por defecto (para la Home)
const {
  title = "Enfermeros Bucaramanga | Servicios Profesionales de Enfermería",
  description = "Cuidado de salud a domicilio con enfermeros profesionales en Bucaramanga y área metropolitana.",
  image = "/og/default.jpg", 
} = Astro.props;

// URL del despliegue en GitHub Pages
const siteUrl = "https://atllas1981.github.io/enfermerosBucaramanga";

// Construcción de la URL absoluta de la imagen OG
const absoluteImage = image.startsWith("http")
  ? image
  : `${siteUrl}${image}`;
---

<!doctype html>
<html lang="es-co">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- SEO Básico -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- OpenGraph (Facebook / WhatsApp / LinkedIn) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteImage} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_CO" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteImage} />

    <!-- Icono -->
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.BASE_URL}favicon.svg`}
    />

    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
